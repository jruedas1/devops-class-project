<h2>Sign up as a recruiter</h2>
<%= form_for @recruiter do |form| %>
	<%= form.label :name %><br>
	<%= form.text_field :name, class: "form-control" %><br>
	<%= form.label :email %><br>
	<%= form.email_field :email, class: "form-control" %><br>
  <%= form.label :company %><br>
  <%= form.text_field :company, class: "form-control" %><br>
  <%= form.label :website %><br>
  <%= form.text_field :website, class: "form-control" %><br>
  <%= form.label :linkedin %><br>
  <%= form.text_field :linkedin, class: "form-control" %><br>
  <%= form.label :bio %><br>
  <%= form.text_area :bio, class: "form-control" %><br>
	<%= form.hidden_field :user_id, value: current_user.id %>
	<%= submit_tag "Submit Profile" %><br>
<% end %>



